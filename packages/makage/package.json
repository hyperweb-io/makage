{
  "name": "makage",
  "version": "0.1.0",
  "author": "Dan Lynch <pyramation@gmail.com>",
  "description": "Tiny build helper for monorepo packages - cross-platform copy, clean, and asset management",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "bin": {
    "makage": "cli.js"
  },
  "homepage": "https://github.com/hyperweb-io/dev-utils",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperweb-io/dev-utils"
  },
  "keywords": [
    "build",
    "copy",
    "clean",
    "cli",
    "cross-platform",
    "monorepo",
    "package-management"
  ],
  "bugs": {
    "url": "https://github.com/hyperweb-io/dev-utils/issues"
  },
  "scripts": {
    "copy": "cpy ../../LICENSE README.md package.json dist --flat",
    "clean": "rimraf dist/**",
    "prepublishOnly": "npm run build",
    "build": "npm run clean; tsc; tsc -p tsconfig.esm.json; npm run copy",
    "lint": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
